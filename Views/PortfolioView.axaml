<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:FinScope.ViewModels"
             xmlns:v="clr-namespace:FinScope.Views.Controls"
        x:CompileBindings="False"
			 
             mc:Ignorable="d"
             x:Class="FinScope.PortfolioView"
             x:DataType="vm:PortfolioViewModel"
             d:DesignWidth="1200" d:DesignHeight="800">

	<UserControl.Styles>
		<Style Selector="TextBlock.header">
			<Setter Property="FontSize" Value="24"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Margin" Value="0 0 15 0"/>
			<Setter Property="Foreground" Value="{DynamicResource SystemAccentColorBrush}"/>
		</Style>

		<Style Selector="Border.card">
			<Setter Property="Background" Value="#FF252525"/>
			<Setter Property="BorderBrush" Value="#FF404040"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="CornerRadius" Value="8"/>
			<Setter Property="Padding" Value="15"/>
			<Setter Property="Margin" Value="10"/>
		</Style>

		<Style Selector="TextBlock.value-text">
			<Setter Property="FontSize" Value="20"/>
			<Setter Property="Margin" Value="0 5 0 0"/>
		</Style>
	</UserControl.Styles>

	<ScrollViewer>
		<StackPanel Margin="20">
			<!-- Заголовок -->
			<TextBlock Text="Мой портфель" Classes="header"/>

			<!-- Общая информация -->
			<WrapPanel  Margin="0 20">
				<!-- Общая стоимость -->
				<Border Classes="card" Width="300">
					<StackPanel>
						<TextBlock Text="Общая стоимость" FontSize="16"/>
						<TextBlock Text="{Binding TotalValue, StringFormat='{}{0:C2}'}"
                                   Classes="value-text"
                                   Foreground="{DynamicResource SystemAccentColorBrush}"/>
					</StackPanel>
				</Border>

				<!-- Доходность -->
				<Border Classes="card" Width="300">
					<StackPanel>
						<TextBlock Text="Доходность" FontSize="16"/>
						<TextBlock Text="{Binding Profit, StringFormat='{}{0:C2}'}"
                                   Classes="value-text"
                                   Foreground="{Binding ProfitColor}"/>
						<TextBlock Text="{Binding ProfitPercent, StringFormat='{}{0:+0.00;-0.00;0.00}%'}"
                                   Foreground="{Binding ProfitColor}"/>
					</StackPanel>
				</Border>
			</WrapPanel>

			<!-- Распределение по секторам -->
			<Border Classes="card" Margin="0 20">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>

					<StackPanel>
						<TextBlock Text="Распределение по секторам" FontSize="16" Margin="0 0 0 10"/>
						<ItemsControl ItemsSource="{Binding SectorAllocations}">
							<ItemsControl.ItemTemplate>
								<DataTemplate>
									<Grid ColumnDefinitions="150*,100*,80*" Margin="0 5">
										<TextBlock Text="{Binding Sector}"/>
										<TextBlock Text="{Binding Value, StringFormat='{}{0:C2}'}"
                                                   HorizontalAlignment="Right"/>
										<TextBlock Text="{Binding Percentage, StringFormat='{}{0:P1}'}"
                                                   HorizontalAlignment="Right"/>
									</Grid>
								</DataTemplate>
							</ItemsControl.ItemTemplate>
						</ItemsControl>
					</StackPanel>

					
				</Grid>
			</Border>

			<!-- Список активов -->
			<Border Classes="card" Margin="0 20">
				<DataGrid ItemsSource="{Binding PortfolioAssets}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          GridLinesVisibility="None">
					<DataGrid.Columns>
						<DataGridTextColumn Header="Актив" Binding="{Binding Symbol}" Width="100"/>
						<DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
						<DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="80"/>
						<DataGridTextColumn Header="Ср. цена" Binding="{Binding AvgPrice, StringFormat='{}{0:C2}'}" Width="120"/>
						<DataGridTextColumn Header="Тек. цена" Binding="{Binding CurrentPrice, StringFormat='{}{0:C2}'}" Width="120"/>
						<DataGridTextColumn Header="Стоимость" Binding="{Binding Value, StringFormat='{}{0:C2}'}" Width="120"/>
						<!--	<DataGridTextColumn Header="Доходность" Binding="{Binding Profit, StringFormat='{}{0:C2}'}" Width="120">
							<DataGridTextColumn.CellStyle>
								<Style Selector="DataGridCell">
									<Setter Property="Foreground" Value="{Binding ProfitColor}"/>
									<Setter Property="HorizontalContentAlignment" Value="Right"/>
								</Style>
							</DataGridTextColumn.CellStyle>
						</DataGridTextColumn>
						<DataGridTextColumn Header="%" Binding="{Binding ProfitPercent, StringFormat='{}{0:+0.00;-0.00;0.00}%'}" Width="100">
							<DataGridTextColumn.CellStyle>
								<Style Selector="DataGridCell">
									<Setter Property="Foreground" Value="{Binding ProfitColor}"/>
									<Setter Property="HorizontalContentAlignment" Value="Right"/>
								</Style>
							</DataGridTextColumn.CellStyle>
						</DataGridTextColumn>-->
					</DataGrid.Columns>
				</DataGrid>
			</Border>
		</StackPanel>
	</ScrollViewer>
</UserControl>